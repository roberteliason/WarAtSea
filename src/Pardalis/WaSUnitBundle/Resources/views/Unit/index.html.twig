{% extends 'PardalisWaSUnitBundle::base.html.twig' %}
{% block body %}
	<div class="page units">
		<h1>Unit list</h1>
		<div class="row">
			<div class="col-lg-6 col-md-6">
				<ul id="units" class="list-group">
					{% for unit in units %}
						<li class="list-group-item">
							{% if unit.nation %}
                                <i nation="{{ unit.nation.name }}"></i>
                            {% endif %}
							{% if unit.rarity %}
                            <i rarity="{{ unit.rarity.name }}"></i>
                            {% endif %}
							<a href="{{ path('pardalis_was_unit_view', {'id': unit.id}) }}">{{ unit.name }}</a>
							<span class="badge">{{ unit.cost }}</span>
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>
{% endblock %}